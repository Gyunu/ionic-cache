{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "@angular/http": ["node_modules/@angular/http"],
      "@ionic-native/native-storage": ["node_modules/@ionic-native/native-storage"],
      "@ionic/storage": ["node_modules/@ionic/storage"],
      "rxjs/*": ["node_modules/rxjs/*"]
    },
    "rootDir": "./src",
    "outDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
